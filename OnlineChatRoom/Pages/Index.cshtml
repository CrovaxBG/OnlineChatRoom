@page
@model IndexModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Home page";
}

<div id="usernameRegistration" class="text-center">
    <h1 class="display-4">Welcome!</h1>
    <br />
    <form id="buttonBusyIndicator" method="post">
        <div asp-validation-summary="All" class="text-danger help-block"></div>
        <hr/>
        <div class="form-group col-md-4 offset-4">
            <input asp-for="Username" type="text" class="form-control" placeholder="Enter your nickname">
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4 offset-4">
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password">
            <span asp-validation-for="Password" class="text-danger"></span>
            <small class="form-text text-muted">A username and password is all you'll need to chat!</small>
        </div>
        <div class="col-md-4 offset-4">
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </div>
    </form>
</div>